{
  "name": "@fractary/codex-cli",
  "version": "0.9.1",
  "description": "Command-line interface for Fractary Codex knowledge management",
  "keywords": [
    "codex",
    "cli",
    "knowledge-management",
    "fractary"
  ],
  "homepage": "https://github.com/fractary/codex#readme",
  "bugs": {
    "url": "https://github.com/fractary/codex/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fractary/codex.git",
    "directory": "cli"
  },
  "license": "MIT",
  "author": "Fractary Engineering",
  "type": "module",
  "bin": {
    "fractary-codex": "./dist/cli.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "prepublishOnly": "npm run build && npm run test"
  },
  "dependencies": {
    "@fractary/codex": "^0.9.1",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "glob": "^10.3.10",
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.17.9",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.17.0",
    "prettier": "^3.4.2",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
