{
  "name": "@fractary/codex-mcp",
  "version": "0.10.3",
  "description": "MCP server for Fractary Codex knowledge management",
  "keywords": [
    "codex",
    "mcp",
    "model-context-protocol",
    "fractary",
    "knowledge-management",
    "ai-agents"
  ],
  "homepage": "https://github.com/fractary/codex#readme",
  "bugs": {
    "url": "https://github.com/fractary/codex/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fractary/codex.git",
    "directory": "mcp/server"
  },
  "license": "MIT",
  "author": "Fractary Engineering",
  "type": "module",
  "bin": {
    "fractary-codex-mcp": "./dist/cli.cjs"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepublishOnly": "npm run build && npm run test"
  },
  "dependencies": {
    "@fractary/codex": "^0.12.0",
    "commander": "^11.1.0",
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.17.9",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "eslint": "^9.17.0",
    "prettier": "^3.4.2",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
